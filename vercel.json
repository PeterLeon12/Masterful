{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/simple-supabase.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/simple-supabase.ts"
    },
    {
      "src": "/health",
      "dest": "backend/src/simple-supabase.ts"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/simple-supabase.ts": {
      "maxDuration": 30
    }
  }
}
